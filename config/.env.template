# 환경 변수 템플릿 파일
# 실제 사용 시 .env 파일로 복사 후 값 설정

# 환경 설정
ENVIRONMENT=development
DEBUG=True

# 서버 설정
SERVER_HOST=localhost
SERVER_PORT=8501

# 데이터베이스 설정 (향후 확장용)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mbti_db
DB_USER=admin
DB_PASSWORD=your_password_here

# 보안
SECRET_KEY=your-very-secret-key-change-this
ALLOWED_HOSTS=localhost,127.0.0.1

# 로깅
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# API 설정
API_RATE_LIMIT=100/hour
API_TIMEOUT=30

# 기타 설정
CACHE_TTL=3600